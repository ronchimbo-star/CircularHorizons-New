---
import { supabase } from '../lib/supabase';

const { data: settings } = await supabase.from('site_settings').select('*');
const settingsMap = settings?.reduce((acc, s) => ({ ...acc, [s.key]: s.value }), {}) || {};
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center mb-4">
          {settingsMap.footer_logo ? (
            <img src={settingsMap.footer_logo} alt={settingsMap.site_title || 'Circular Horizons'} class="h-10 w-auto mr-3" />
          ) : (
            <img src="/bricswise-icon.svg" alt="Circular Horizons" class="h-10 w-auto mr-3" />
          )}
          <span class="text-xl font-bold">{settingsMap.site_title || 'Circular Horizons'}</span>
        </div>
        <p class="text-gray-400 mb-4">
          {settingsMap.site_description || 'Pioneering sustainable solutions for a circular economy future.'}
        </p>
        <div class="flex space-x-4">
          {settingsMap.social_linkedin && (
            <a href={settingsMap.social_linkedin} class="text-gray-400 hover:text-white" target="_blank" rel="noopener noreferrer">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
          {settingsMap.social_twitter && (
            <a href={settingsMap.social_twitter} class="text-gray-400 hover:text-white" target="_blank" rel="noopener noreferrer">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          )}
          {settingsMap.social_facebook && (
            <a href={settingsMap.social_facebook} class="text-gray-400 hover:text-white" target="_blank" rel="noopener noreferrer">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Services</h3>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/consultancy" class="hover:text-white">Consultancy</a></li>
          <li><a href="/mediwaste" class="hover:text-white">MediWaste</a></li>
          <li><a href="/sanilady" class="hover:text-white">SaniLady</a></li>
          <li><a href="/toolserve" class="hover:text-white">ToolServe</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Company</h3>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/about" class="hover:text-white">About Us</a></li>
          <li><a href="/careers" class="hover:text-white">Careers</a></li>
          <li><a href="/contact" class="hover:text-white">Contact</a></li>
          <li><a href="/faq" class="hover:text-white">FAQ</a></li>
        </ul>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">{settingsMap.footer_copyright || `Â© ${new Date().getFullYear()} Circular Horizons. All rights reserved.`}</p>
        <div class="flex space-x-4 mt-4 md:mt-0">
          <a href="/privacy" class="text-gray-400 hover:text-white text-sm">Privacy Policy</a>
          <a href="/terms" class="text-gray-400 hover:text-white text-sm">Terms of Service</a>
          <a href="/cookie" class="text-gray-400 hover:text-white text-sm">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>
