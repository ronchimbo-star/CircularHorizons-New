---
import AdminLayout from '../../layouts/AdminLayout.astro';

export const prerender = false;
---

<AdminLayout title="Dashboard">
  <div>
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-gray-500 text-sm font-medium">Total Pages</h3>
        <p class="text-3xl font-bold text-gray-900 mt-2" id="pages-count">0</p>
      </div>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-gray-500 text-sm font-medium">Published News</h3>
        <p class="text-3xl font-bold text-gray-900 mt-2" id="news-count">0</p>
      </div>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-gray-500 text-sm font-medium">Media Files</h3>
        <p class="text-3xl font-bold text-gray-900 mt-2" id="media-count">0</p>
      </div>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-gray-500 text-sm font-medium">Unread Messages</h3>
        <p class="text-3xl font-bold text-gray-900 mt-2" id="contacts-count">0</p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="/admin/news?action=new" class="block p-4 border-2 border-dashed border-gray-300 rounded-lg hover:border-primary text-center">
          <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span class="text-sm font-medium text-gray-900">Create News Article</span>
        </a>
        <a href="/admin/media?action=upload" class="block p-4 border-2 border-dashed border-gray-300 rounded-lg hover:border-primary text-center">
          <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          <span class="text-sm font-medium text-gray-900">Upload Media</span>
        </a>
        <a href="/admin/settings" class="block p-4 border-2 border-dashed border-gray-300 rounded-lg hover:border-primary text-center">
          <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="text-sm font-medium text-gray-900">Site Settings</span>
        </a>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6 mt-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Tools</h2>
      <div class="flex flex-col gap-4">
        <button
          id="download-screenshots-btn"
          class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
        >
          <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span id="screenshot-btn-text">Download Public Page Screenshots</span>
        </button>
        <div id="screenshot-status" class="text-sm text-gray-600 hidden"></div>
      </div>
    </div>
  </div>

  <script>
    import { supabase } from '../../lib/supabase';

    async function loadStats() {
      const { count: pagesCount } = await supabase
        .from('pages')
        .select('*', { count: 'exact', head: true });

      const { count: newsCount } = await supabase
        .from('news_articles')
        .select('*', { count: 'exact', head: true })
        .eq('is_published', true);

      const { count: mediaCount } = await supabase
        .from('media')
        .select('*', { count: 'exact', head: true });

      const { count: contactsCount } = await supabase
        .from('contact_submissions')
        .select('*', { count: 'exact', head: true })
        .eq('is_read', false);

      document.getElementById('pages-count')!.textContent = pagesCount?.toString() || '0';
      document.getElementById('news-count')!.textContent = newsCount?.toString() || '0';
      document.getElementById('media-count')!.textContent = mediaCount?.toString() || '0';
      document.getElementById('contacts-count')!.textContent = contactsCount?.toString() || '0';
    }

    async function generateScreenshots() {
      const btn = document.getElementById('download-screenshots-btn') as HTMLButtonElement;
      const btnText = document.getElementById('screenshot-btn-text')!;
      const status = document.getElementById('screenshot-status')!;

      btn.disabled = true;
      btnText.textContent = 'Generating screenshots...';
      status.textContent = 'This may take a minute. Please wait...';
      status.classList.remove('hidden', 'text-red-600');
      status.classList.add('text-blue-600');

      try {
        const { data: pages } = await supabase
          .from('pages')
          .select('slug')
          .eq('is_published', true);

        const pagePaths = [
          '/',
          '/contact',
          '/news',
          ...(pages?.map((p: any) => `/${p.slug}`) || [])
        ];

        const response = await fetch('/api/generate-screenshots', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ pages: pagePaths })
        });

        if (!response.ok) {
          throw new Error('Failed to generate screenshots');
        }

        const blob = await response.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `bricswise-screenshots-${Date.now()}.zip`;
        document.body.appendChild(a);
        a.click();
        window.URL.revokeObjectURL(url);
        document.body.removeChild(a);

        status.textContent = 'Screenshots downloaded successfully!';
        status.classList.remove('text-blue-600');
        status.classList.add('text-green-600');

      } catch (error) {
        console.error('Screenshot error:', error);
        status.textContent = 'Failed to generate screenshots. Please try again.';
        status.classList.remove('text-blue-600');
        status.classList.add('text-red-600');
      } finally {
        btn.disabled = false;
        btnText.textContent = 'Download Public Page Screenshots';
        setTimeout(() => {
          status.classList.add('hidden');
        }, 5000);
      }
    }

    document.getElementById('download-screenshots-btn')?.addEventListener('click', generateScreenshots);

    loadStats();
  </script>
</AdminLayout>
