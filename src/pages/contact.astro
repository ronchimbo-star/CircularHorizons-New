---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
import { supabase } from '../lib/supabase';

export const prerender = false;

const { data: settings } = await supabase.from('site_settings').select('*');
const settingsMap = settings?.reduce((acc, s) => ({ ...acc, [s.key]: s.value }), {}) || {};
---

<Layout title="Contact Us - BRICSwise">
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">Get In Touch</h1>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          Ready to start your sustainability journey? Our team is here to help you every step of the way.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
          <ContactForm client:load />
        </div>

        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>
          <div class="space-y-6">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-primary mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900">Email</h3>
                <p class="text-gray-600">{settingsMap.contact_email || 'info@circularhorizons.com'}</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-6 w-6 text-primary mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900">Phone</h3>
                <p class="text-gray-600">{settingsMap.contact_phone || '+44 (0) 20 1234 5678'}</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-6 w-6 text-primary mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900">Address</h3>
                <p class="text-gray-600 whitespace-pre-line">{settingsMap.contact_address || '123 Sustainability Street\nLondon, UK\nEC1A 1BB'}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
