---
import Layout from '../layouts/Layout.astro';

const newsArticles = [
  {
    id: 1,
    title: "Circular Economy Trends 2026",
    excerpt: "Exploring the latest developments in circular economy practices and what they mean for businesses.",
    date: "January 2026",
    image: "https://images.unsplash.com/photo-1497435334941-8c899ee9e8e9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 2,
    title: "ESG Reporting Made Simple",
    excerpt: "A comprehensive guide to streamlining your ESG reporting process.",
    date: "December 2025",
    image: "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 3,
    title: "Sustainability Certifications Guide",
    excerpt: "Understanding the different sustainability certifications and which one is right for your business.",
    date: "November 2025",
    image: "https://images.unsplash.com/photo-1542601906990-b4d3fb778b09?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  }
];
---

<Layout title="News & Insights - Circular Horizons International">
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
          News & Insights
        </h1>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          Stay updated with the latest trends, insights, and news from the world of sustainability and circular economy.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {newsArticles.map((article) => (
          <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <img src={article.image} alt={article.title} class="w-full h-48 object-cover" />
            <div class="p-6">
              <p class="text-sm text-gray-500 mb-2">{article.date}</p>
              <h2 class="text-xl font-bold text-gray-900 mb-3">{article.title}</h2>
              <p class="text-gray-600 mb-4">{article.excerpt}</p>
              <a href="#" class="inline-flex items-center text-primary font-medium hover:text-primary/80">
                Read More
                <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</Layout>
