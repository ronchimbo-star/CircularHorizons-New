---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Consultancy from '../components/sections/Consultancy.astro';
import MediWaste from '../components/sections/MediWaste.astro';
import SaniLady from '../components/sections/SaniLady.astro';
import ToolServe from '../components/sections/ToolServe.astro';
---

<Layout title="Circular Horizons International - Sustainable Solutions">
  <Hero />
  <Consultancy />
  <MediWaste />
  <SaniLady />
  <ToolServe />

  <section class="bg-primary">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
      <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
        <span class="block">Ready to accelerate your sustainability journey?</span>
        <span class="block text-secondary">Get in touch with our team today.</span>
      </h2>
      <div class="mt-8 flex flex-col sm:flex-row gap-3 lg:mt-0 lg:flex-shrink-0">
        <a href="/contact" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-primary bg-white hover:bg-gray-50">
          Contact Us
        </a>
        <a href="/contact" class="inline-flex items-center justify-center px-5 py-3 border-2 border-white text-base font-medium rounded-md text-white bg-transparent hover:bg-white hover:text-primary transition-all duration-200">
          Book a Demo
        </a>
      </div>
    </div>
  </section>
</Layout>
